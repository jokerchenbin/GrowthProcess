<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_retrofit"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cst.growthprocess.retrofit_okhttp.RetrofitActivity">

    <EditText
        android:id="@+id/edit_cityname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/edit_cityname"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:background="#c22121"
        android:text="点击测试Retrofit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24dp" />


    <TextView
        android:id="@+id/activity_retrofit_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:singleLine="false" />

</RelativeLayout>
