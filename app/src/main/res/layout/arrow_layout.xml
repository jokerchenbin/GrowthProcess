<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/arrow_layout_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arrow_top"
        android:background="@drawable/cumston_bg"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/arrow_layout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择要发表的地方"
            android:textColor="#333333"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/arrow_layout_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/close_delete" />

    </LinearLayout>

    <TextView
        android:id="@+id/arrow_top"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/arrow_layout_linearLayout"
        android:layout_marginBottom="-3dp"
        android:background="@mipmap/top"
        android:visibility="visible" />

    <TextView
        android:id="@+id/arrow_button"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/arrow_layout_linearLayout"
        android:layout_below="@+id/arrow_layout_linearLayout"
        android:layout_marginTop="-3dp"
        android:background="@mipmap/button"
        android:visibility="visible" />

</RelativeLayout>