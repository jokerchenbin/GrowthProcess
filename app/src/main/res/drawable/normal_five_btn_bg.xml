<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下 -->
    <item android:state_pressed="true">

        <shape>
            <stroke android:width="0.5dp" android:color="@color/btn_edge_line_yellow_press" />
            <solid android:color="@color/ordinary_btn_bg_press" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <!-- 禁用 -->
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="0.5dp" android:color="@color/btn_bg_forbidden" />
            <solid android:color="@color/btn_bg_forbidden" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <!-- 普通状态 -->
    <item>
        <shape>
            <stroke android:width="0.5dp" android:color="@color/btn_edge_line_yellow_normal" />
            <solid android:color="@color/ordinary_btn_bg_normal" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</selector>