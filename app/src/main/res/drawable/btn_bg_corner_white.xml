<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/ordinary_btn_bg_normal" />
            <corners android:radius="2dp" />
            <stroke android:width="0.5dp" android:color="@color/ordinary_btn_bg_corner" />
        </shape>
    </item>

    <!-- 普通状态 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/ordinary_btn_bg_press" />
            <corners android:radius="2dp" />
            <stroke android:width="0.5dp" android:color="@color/ordinary_btn_bg_corner" />
        </shape>
    </item>

</selector>